VITE_APP_VERSION=$npm_package_version

# Analytics (leave empty for local dev)
VITE_SEGMENT_CREATORS_HUB_API_KEY=
VITE_SEGMENT_INSPECTOR_API_KEY=

# Local Development with asset-packs in monorepo
# Inspector dev server port (from `npm start` in packages/inspector)
VITE_INSPECTOR_PORT=8000

# Asset-packs local development
# Content server running via docker-compose in packages/asset-packs
VITE_ASSET_PACKS_CONTENT_URL=http://localhost:9000/asset-packs

# SDK7 dev server port (from `npm run start` in packages/asset-packs)
VITE_ASSET_PACKS_JS_PORT=8001

# Absolute path to bin/index.js in your local asset-packs
VITE_ASSET_PACKS_JS_PATH=/path/to//creators-hub/packages/asset-packs/bin/index.js

VITE_ENABLE_DEV_APP_UPDATE=

# Publish (leave empty for local dev)
VITE_WORLDS_SERVER=
VITE_TEST_SERVER=

# Security
VITE_ALLOWED_EXTERNAL_ORIGINS="https://github.com"

# ============================================
# HOW TO USE THIS FOR LOCAL DEVELOPMENT:
# ============================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Update VITE_ASSET_PACKS_JS_PATH with your actual path
#
# 3. Start the inspector dev server:
#    cd packages/inspector
#    npm start  # Starts on port 8000
#
# 4. In another terminal, start the asset-packs dev environment:
#    cd packages/asset-packs
#    npm run start  # Starts SDK7 server on port 8001
#
# 5. In another terminal, start the docker content server:
#    cd packages/asset-packs
#    docker-compose up  # Starts content server on port 9000
#
# 6. In another terminal, upload assets to local content server:
#    cd packages/asset-packs
#    npm run upload  # Uploads to http://localhost:9000
#
# 7. Start Creator Hub:
#    cd packages/creator-hub
#    npm start  # Will use all the local services above
#
# ============================================
